<div id="blog">
    <div class="container">
        <form class="clearfix mb-4" action="POST">
            <div class="form-group">
                <label for="blog-title">Blog Post Title</label>
                <input type="text" id="blog-post-title" class="form-control" aria-describedby="blog-title"
                    placeholder="Enter Title" />
            </div>
            <div class="form-group">
                <label for="blog-post">Blog Post</label>
                <textarea class="form-control" id="blog-post" aria-describedby="example-description"
                    placeholder="Enter Post"></textarea>
            </div>
            <button id="submit" class="btn btn-primary float-right">
                Submit
            </button>
        </form>
        <h3>Blog Posts:</h3>
        <ul id="blogPost-list" class="list-group">
            {{#each posts}}
            <li data-id="{{this.id}}" class="list-group-item">
                <a href="post/{{this.id}}">{{this.text}}</a>
                <button class="btn btn-danger float-right delete">ï½˜</button>
            </li>
            {{/each}}
        </ul>

    </div>
</div>